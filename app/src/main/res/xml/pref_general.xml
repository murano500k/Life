<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <com.rarepebble.colorpicker.ColorPreference
        android:key="pref_CellColor"
        android:title="@string/pref_title_cell_color"
        />
    <com.rarepebble.colorpicker.ColorPreference
        android:key="pref_BgColor"
        android:title="@string/pref_title_bg_color"
        />
    <EditTextPreference
        android:key="pref_Seed"
        android:inputType="number"
        android:title="Random settings. Smaller number - more cells"/>
    <EditTextPreference
        android:key="pref_SleepTime"
        android:inputType="number"
        android:title="Sleep between steps in ms"/>
    <EditTextPreference
        android:key="pref_CellSize"
        android:inputType="number"
        android:title="Cell size in pixels"/>


    <!--<SwitchPreference
        android:defaultValue="disabled"
        android:key="pref_autoBr"
        android:title="@string/pref_title_auto_brightness"/>-->

</PreferenceScreen>
